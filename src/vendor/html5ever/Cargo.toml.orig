[package]

name = "html5ever"
version = "0.22.3"
authors = [ "The html5ever Project Developers" ]
license = "MIT / Apache-2.0"
repository = "https://github.com/servo/html5ever"
description = "High-performance browser-grade HTML5 parser"
documentation = "https://docs.rs/html5ever"
build = "build.rs"
categories = [ "parser-implementations", "web-programming" ]

[lib]
name = "html5ever"

doctest = true

[[test]]
name = "tree_builder"
harness = false

[[test]]
name = "tokenizer"
harness = false

[[test]]
name = "serializer"

[[bench]]
name = "tokenizer"
harness = false

[dependencies]
log = "0.4"
mac = "0.1"
markup5ever = { version = "0.7", path = "../markup5ever" }

[dev-dependencies]
rustc-serialize = "0.3.15"
rustc-test = "0.3"
typed-arena = "1.3.0"

[build-dependencies]
quote = "0.5"
syn = { version = "0.13", features = ["extra-traits", "full", "fold"] }
proc-macro2 = "0.3"
