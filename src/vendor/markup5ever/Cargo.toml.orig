[package]
name = "markup5ever"
version = "0.3.2"  # At next breaking change: also remove the "unstable" feature, now a no-op; update tendril to 0.4
authors = [ "The html5ever Project Developers" ]
license = "MIT / Apache-2.0"
repository = "https://github.com/servo/html5ever"
description = "Common code for xml5ever and html5ever"
documentation = "https://docs.rs/markup5ever"
build = "build.rs"

[lib]
path = "lib.rs"

[features]
heap_size = ["heapsize", "heapsize_derive", "string_cache/heapsize"]
unstable = []

[dependencies]
string_cache = "0.6"
phf = "0.7"
tendril = "0.3.1"
heapsize = { version = ">= 0.3, < 0.5", optional = true }
heapsize_derive = { version = "0.1", optional = true }

[build-dependencies]
string_cache_codegen = "0.4"
phf_codegen = "0.7.3"
rustc-serialize = "0.3.15"

